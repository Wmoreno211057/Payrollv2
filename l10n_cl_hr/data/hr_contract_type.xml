<?xml version="1.0" encoding="utf-8"?>						
<odoo>						
    <data>                   

       <!-- Contract Types -->
        <record id="hr_contract_type_not_defined" model="hr.payroll.structure.type">
            <field name="name">Plazo Indefinido</field>
            <field name="codigo">1</field>
        </record>

        <record id="hr_contract_type_fixed" model="hr.payroll.structure.type">
            <field name="name">Plazo Fijo</field>
            <field name="codigo">7</field>
        </record>

        <record id="hr_contract_type_more_eleven" model="hr.payroll.structure.type">
            <field name="name">Indefinido 11 anos o mas</field>
            <field name="codigo">1</field>
        </record>

        <record id="hr_contract_type_enterprice_wage" model="hr.payroll.structure.type">
            <field name="name">Sueldo Empresarial</field>
            <field name="codigo">1</field>
        </record>

        <!-- Estructuras Salariales -->
        <record id="hr_struct_cl_base" model="hr.payroll.structure">
            <field name="name">Nuevas estructuras</field>
            <field name="display_name">Base para nuevas estructuras</field>
            <field name="type_id" ref="hr_contract_type_more_eleven"/>
        </record>

        <record id="hr_struct_cl_work_code" model="hr.payroll.structure">
            <field name="name">Código del Trabajo</field>
            <field name="display_name">Código del Trabajo de Chile</field>
            <field name="type_id" ref="hr_contract_type_enterprice_wage"/>
        </record>


    </data>						
</odoo>						
